<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pld_default_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dip"
        android:layout_marginTop="24dip"
        android:layout_marginEnd="24dip"
        android:textColor="@color/text_333"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"
        tools:text="请输入手机号码" />

    <TextView
        android:id="@+id/tv_title_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginStart="24dip"
        android:layout_marginEnd="24dip"
        android:textColor="@color/text_666"
        android:textSize="@dimen/text_size_16"
        tools:text="副标题" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_sub"
        android:layout_marginStart="24dip"
        android:layout_marginTop="16dip"
        android:layout_marginEnd="16dip"
        android:background="@android:color/transparent"
        android:hint="请输入..."
        android:paddingStart="8dip"
        android:paddingTop="16dip"
        android:paddingEnd="8dip"
        android:paddingBottom="8dip"
        android:textColor="?colorPrimary"
        android:textColorHint="@color/text_ccc"
        android:textSize="@dimen/text_size_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:layout_below="@id/et_input"
        android:layout_marginStart="24dip"
        android:layout_marginEnd="24dip"
        android:layout_marginBottom="16dip"
        android:background="@color/pld_edit_activated_color" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="96dp"
        android:layout_height="48dip"
        android:layout_below="@+id/et_input"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dip"
        android:background="@drawable/btn_fixed"
        android:gravity="center"
        android:padding="8dp"
        android:text="确定"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_13" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="96dp"
        android:layout_height="48dip"
        android:layout_alignTop="@id/btn_confirm"
        android:layout_toStartOf="@id/btn_confirm"
        android:background="@drawable/list_selector"
        android:gravity="center"
        android:text="取消"
        android:textColor="#6B7886"
        android:textSize="@dimen/text_size_13" />

</RelativeLayout>
