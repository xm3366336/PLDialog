<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="320dip"
    android:layout_height="wrap_content"
    android:background="@drawable/pld_dialog_full"
    android:orientation="vertical"
    android:padding="16dip">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dip"
        android:layout_marginTop="16dip"
        android:layout_marginEnd="16dip"
        android:textColor="@color/text_333"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"
        tools:text="请输入手机号码" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_alignStart="@id/tv_title"
        android:layout_alignEnd="@id/tv_title"
        android:layout_marginTop="16dip"
        android:textColor="@color/text_666"
        android:textSize="@dimen/text_size_16"
        tools:text="副标题" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="96dp"
        android:layout_height="48dip"
        android:layout_below="@+id/tv_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dip"
        android:background="@drawable/list_selector"
        android:gravity="center"
        android:padding="8dp"
        android:text="确定"
        android:textColor="@color/pld_edit_activated_color"
        android:textSize="@dimen/text_size_14" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="96dp"
        android:layout_height="48dip"
        android:layout_alignTop="@id/btn_confirm"
        android:layout_toStartOf="@id/btn_confirm"
        android:background="@drawable/list_selector"
        android:gravity="center"
        android:text="取消"
        android:textColor="#6B7886"
        android:textSize="@dimen/text_size_14" />

</RelativeLayout>
