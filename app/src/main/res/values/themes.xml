<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PLDialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_500</item>
        <item name="android:buttonStyle">@style/Base.Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="Theme.PLDialog.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PLDialog.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PLDialog.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>