<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/colorPressTrans" />
            <corners android:radius="@dimen/pld_px_4" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorPressTrans" />
            <corners android:radius="@dimen/pld_px_4" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ffffff" />
            <corners android:radius="@dimen/pld_px_4" />
            <stroke android:width="@dimen/pld_px_0_5" android:color="@color/colorGray_30" />
        </shape>
    </item>

</selector>