<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/pld_px_4" android:bottomRightRadius="@dimen/pld_px_4" />
            <stroke android:width="@dimen/pld_px_0_5" android:color="@color/colorPress" />
            <solid android:color="@color/colorGray_30" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorGray_30" />
                    <corners android:bottomLeftRadius="@dimen/pld_px_4" android:bottomRightRadius="@dimen/pld_px_4" />
                </shape>
            </item>
            <item android:bottom="@dimen/pld_px_0_5" android:left="@dimen/pld_px_0_5" android:right="@dimen/pld_px_0_5">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="@dimen/pld_px_4" android:bottomRightRadius="@dimen/pld_px_4" />
                    <solid android:color="@color/colorWhite" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>