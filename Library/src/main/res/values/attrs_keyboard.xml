<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="KeyBoard">

        <!-- 主题样式 -->
        <attr name="KB_Theme" format="enum">
            <enum name="dark" value="0" />
            <enum name="light" value="1" />
        </attr>
        <!-- 指定字体颜色 -->
        <attr name="KB_textColor" format="color" />
        <!-- 指定字体大小 -->
        <attr name="KB_textSize" format="dimension" />
        <!-- 右下角的按钮显示，若text为空，则不显示，显示的情况下，可指定输入的值 -->
        <attr name="KB_BtnBottomLeft_text" format="string" />
        <attr name="KB_BtnBottomLeft_textSize" format="dimension" />
        <attr name="KB_BtnBottomLeft_textColor" format="color" />
        <!-- 右下角的按钮显示，若text为空，则显示img -->
        <attr name="KB_BtnBottomRight_text" format="string" />
        <attr name="KB_BtnBottomRight_textSize" format="dimension" />
        <attr name="KB_BtnBottomRight_textColor" format="color" />
        <attr name="KB_BtnBottomRight_img" format="reference" />
        <!-- 字母是否使用大写值 -->
        <attr name="KB_AllCap" format="boolean" />
        <!-- 按钮的背景 -->
        <attr name="KB_BtnBg" format="reference" />
    </declare-styleable>

</resources>