<resources>

    <style name="PLAppDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PLAppDialog.TransBg">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="PLAppDialog.TransBg.FadeInOut">
        <item name="android:windowAnimationStyle">@style/PLAnimationFadeInOut</item>
    </style>

    <style name="PLAppDialog.TransBg.PushInOut">
        <item name="android:windowAnimationStyle">@style/PLAnimationPushInOut</item>
    </style>

    <style name="PLAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="PLAnimationPushInOut">
        <item name="android:windowEnterAnimation">@anim/push_enter</item>
        <item name="android:windowExitAnimation">@anim/push_exit</item>
    </style>

    <style name="PLKeyboardStyle" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_enter</item>
        <item name="android:windowExitAnimation">@anim/push_exit</item>
    </style>

    <style name="PLKeyboardBtn">
        <item name="android:layout_height">72dip</item>
        <item name="android:layout_marginStart">2dip</item>
        <item name="android:layout_marginEnd">2dip</item>
        <item name="android:background">@drawable/list_selector_white</item>
        <item name="android:textColor">@color/text_666_to_999</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>
