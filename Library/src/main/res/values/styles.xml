<resources>

    <style name="PLAppDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PLAppDialog.TransBg">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="PLAppDialog.TransBg.FadeInOut">
        <item name="android:windowAnimationStyle">@style/PLAnimationFadeInOut</item>
    </style>

    <style name="PLAppDialog.TransBg.PushInOut">
        <item name="android:windowAnimationStyle">@style/PLAnimationPushInOut</item>
    </style>

    <style name="PLAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="PLAnimationPushInOut" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_enter</item>
        <item name="android:windowExitAnimation">@anim/push_exit</item>
    </style>

    <style name="PLKeyboardStyle" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_enter</item>
        <item name="android:windowExitAnimation">@anim/push_exit</item>
    </style>

    <style name="PLKeyboardBtn">
        <item name="android:layout_height">@dimen/pld_px_72</item>
        <item name="android:layout_marginStart">@dimen/pld_px_2</item>
        <item name="android:layout_marginEnd">@dimen/pld_px_2</item>
        <item name="android:background">@drawable/list_selector_white</item>
        <item name="android:textColor">@color/text_666_to_999</item>
        <item name="android:textSize">@dimen/pld_px_18</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <!--ShapeableImageView 圆角-->
    <style name="ShapeStyleR4">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/pld_px_4</item>
    </style>

    <style name="ShapeStyleR6">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/pld_px_6</item>
    </style>

    <style name="ShapeStyleR8">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/pld_px_8</item>
    </style>

    <style name="ShapeStyleR16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/pld_px_16</item>
    </style>

    <style name="ShapeStyleOval">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
