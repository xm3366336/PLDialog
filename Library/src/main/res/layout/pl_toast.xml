<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_r16_black_t99">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="@dimen/pld_px_120"
        android:minHeight="@dimen/pld_px_120"
        android:orientation="vertical"
        android:padding="@dimen/pld_px_8"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/toast_img"
            android:layout_width="@dimen/pld_px_44"
            android:layout_height="@dimen/pld_px_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/pld_px_16"
            android:src="@drawable/ic_toast_info"
            android:tint="@color/colorWhite" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/toast_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxWidth="@dimen/pld_px_240"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/pld_px_14"
            tools:ignore="SpUsage"
            tools:text="通知内容" />

    </LinearLayout>
</LinearLayout>