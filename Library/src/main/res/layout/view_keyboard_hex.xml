<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:padding="@dimen/pld_px_8"
    android:shrinkColumns="*">

    <TableRow>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_1"
            style="@style/PLKeyboardBtn"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_2"
            style="@style/PLKeyboardBtn"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_3"
            style="@style/PLKeyboardBtn"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_a"
            style="@style/PLKeyboardBtn"
            android:layout_marginStart="@dimen/pld_px_16"
            android:text="a" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_d"
            style="@style/PLKeyboardBtn"
            android:text="d" />
    </TableRow>

    <TableRow android:layout_marginTop="@dimen/pld_px_4">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_4"
            style="@style/PLKeyboardBtn"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_5"
            style="@style/PLKeyboardBtn"
            android:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_6"
            style="@style/PLKeyboardBtn"
            android:text="6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_b"
            style="@style/PLKeyboardBtn"
            android:layout_marginStart="@dimen/pld_px_16"
            android:text="b" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_e"
            style="@style/PLKeyboardBtn"
            android:text="e" />
    </TableRow>

    <TableRow android:layout_marginTop="@dimen/pld_px_4">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_7"
            style="@style/PLKeyboardBtn"
            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_8"
            style="@style/PLKeyboardBtn"
            android:text="8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_9"
            style="@style/PLKeyboardBtn"
            android:text="9" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_c"
            style="@style/PLKeyboardBtn"
            android:layout_marginStart="@dimen/pld_px_16"
            android:text="c" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_f"
            style="@style/PLKeyboardBtn"
            android:text="f" />
    </TableRow>

    <TableRow
        android:layout_marginTop="@dimen/pld_px_4"
        android:layout_marginBottom="@dimen/pld_px_4"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_clean"
            style="@style/PLKeyboardBtn"
            android:text="清空"
            android:textSize="@dimen/pld_px_16" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_0"
            style="@style/PLKeyboardBtn"
            android:layout_span="2"
            android:text="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/keyboard_btn_ok"
            style="@style/PLKeyboardBtn"
            android:layout_marginStart="@dimen/pld_px_16"
            android:layout_span="2"
            android:text="确定"
            android:textSize="@dimen/pld_px_16" />

    </TableRow>

</TableLayout>
