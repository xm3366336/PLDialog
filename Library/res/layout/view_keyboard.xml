<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/keyboard_btn_1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="@drawable/list_selector"
        android:text="1"
        android:textSize="@dimen/text_size_24"
        app:layout_constraintBottom_toTopOf="@id/keyboard_btn_4"
        app:layout_constraintEnd_toStartOf="@id/keyboard_btn_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/keyboard_btn_2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="@drawable/list_selector"
        android:text="2"
        android:textSize="@dimen/text_size_24"
        app:layout_constraintBottom_toBottomOf="@id/keyboard_btn_1"
        app:layout_constraintEnd_toStartOf="@id/keyboard_btn_3"
        app:layout_constraintStart_toEndOf="@id/keyboard_btn_1"
        app:layout_constraintTop_toTopOf="@id/keyboard_btn_1" />

    <Button
        android:id="@+id/keyboard_btn_3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="@drawable/list_selector"
        android:text="3"
        android:textSize="@dimen/text_size_24"
        app:layout_constraintBottom_toBottomOf="@id/keyboard_btn_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/keyboard_btn_2"
        app:layout_constraintTop_toTopOf="@id/keyboard_btn_1" />

    <Button
        android:id="@+id/keyboard_btn_4"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="@drawable/list_selector"
        android:text="4"
        android:textSize="@dimen/text_size_24"
        app:layout_constraintBottom_toTopOf="@id/keyboard_btn_7"
        app:layout_constraintEnd_toStartOf="@id/keyboard_btn_5"
        app:layout_constraintStart_toStartOf="@+id/keyboard_btn_1"
        app:layout_constraintTop_toBottomOf="@id/keyboard_btn_1" />

    <Button
        android:id="@+id/keyboard_btn_5"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="@drawable/list_selector"
        android:text="5"
        android:textSize="@dimen/text_size_24"
        app:layout_constraintBottom_toBottomOf="@id/keyboard_btn_4"
        app:layout_constraintEnd_toStartOf="@id/keyboard_btn_6"
        app:layout_constraintStart_toEndOf="@id/keyboard_btn_4"
        app:layout_constraintTop_toTopOf="@id/keyboard_btn_4" />

    <Button
        android:id="@+id/keyboard_btn_6"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="@drawable/list_selector"
        android:text="6"
        android:textSize="@dimen/text_size_24"
        app:layout_constraintBottom_toBottomOf="@id/keyboard_btn_4"
        app:layout_constraintEnd_toEndOf="@id/keyboard_btn_3"
        app:layout_constraintStart_toEndOf="@id/keyboard_btn_5"
        app:layout_constraintTop_toTopOf="@id/keyboard_btn_4" />

    <Button
        android:id="@+id/keyboard_btn_7"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="@drawable/list_selector"
        android:text="7"
        android:textSize="@dimen/text_size_24"
        app:layout_constraintBottom_toTopOf="@id/keyboard_btn_bottom_left"
        app:layout_constraintEnd_toStartOf="@id/keyboard_btn_8"
        app:layout_constraintStart_toStartOf="@id/keyboard_btn_1"
        app:layout_constraintTop_toBottomOf="@id/keyboard_btn_4" />

    <Button
        android:id="@+id/keyboard_btn_8"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="@drawable/list_selector"
        android:text="8"
        android:textSize="@dimen/text_size_24"
        app:layout_constraintBottom_toBottomOf="@id/keyboard_btn_7"
        app:layout_constraintEnd_toStartOf="@id/keyboard_btn_9"
        app:layout_constraintStart_toEndOf="@id/keyboard_btn_7"
        app:layout_constraintTop_toTopOf="@id/keyboard_btn_7" />

    <Button
        android:id="@+id/keyboard_btn_9"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="@drawable/list_selector"
        android:text="9"
        android:textSize="@dimen/text_size_24"
        app:layout_constraintBottom_toBottomOf="@id/keyboard_btn_7"
        app:layout_constraintEnd_toEndOf="@id/keyboard_btn_3"
        app:layout_constraintStart_toEndOf="@id/keyboard_btn_8"
        app:layout_constraintTop_toTopOf="@id/keyboard_btn_7" />

    <Button
        android:id="@+id/keyboard_btn_bottom_left"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="@drawable/list_selector"
        android:textSize="@dimen/text_size_24"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/keyboard_btn_0"
        app:layout_constraintStart_toStartOf="@+id/keyboard_btn_1"
        app:layout_constraintTop_toBottomOf="@id/keyboard_btn_7"
        tools:text="x"
        tools:visibility="visible" />

    <Button
        android:id="@+id/keyboard_btn_0"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="@drawable/list_selector"
        android:text="0"
        android:textSize="@dimen/text_size_24"
        app:layout_constraintBottom_toBottomOf="@id/keyboard_btn_bottom_left"
        app:layout_constraintEnd_toStartOf="@id/keyboard_btn_bottom_right"
        app:layout_constraintStart_toEndOf="@id/keyboard_btn_bottom_left"
        app:layout_constraintTop_toTopOf="@id/keyboard_btn_bottom_left" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/keyboard_btn_bottom_right"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:background="@drawable/list_selector"
        app:layout_constraintBottom_toBottomOf="@id/keyboard_btn_bottom_left"
        app:layout_constraintEnd_toEndOf="@id/keyboard_btn_3"
        app:layout_constraintStart_toEndOf="@id/keyboard_btn_0"
        app:layout_constraintTop_toTopOf="@id/keyboard_btn_bottom_left" />

</androidx.constraintlayout.widget.ConstraintLayout>